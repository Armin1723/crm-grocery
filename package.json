{
  "name": "crm-grocery",
  "version": "1.0.8",
  "description": "Grocery Store CRM App.",
  "author": "CRM",
  "main": "main.js",
  "scripts": {
    "start": "electron . --trace-warnings",
    "dev": "electron .",
    "build": "electron-builder",
    "build win": "electron-builder --win",
    "build linux": "electron-builder --linux",
    "mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^14.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "child_process": "^1.0.0",
    "electron-log": "^5.3.0",
    "electron-updater": "^6.3.9",
    "tcp-port-used": "^1.0.2"
  },
  "build": {
    "asar": true,
    "appId": "com.crm.grocery",
    "productName": "CRM Grocery",
    "extraResources": [
      {
        "from": "./client/dist/assets/index-BYDNqf9_.css",
        "to": "./assets/index.css"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "extraMetadata": {
      "name": "CRM Grocery",
      "description": "Grocery Store CRM App.",
      "author": "CRM",
      "version": "1.0.8"
    },
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Armin1723",
      "repo": "crm-grocery"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
}
